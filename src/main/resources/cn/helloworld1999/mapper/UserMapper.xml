<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.helloworld1999.mapper.UserMapper">
    <insert id="insertUser">

        INSERT INTO user (user_id, account, password, balance, role, user_phone_num)
        VALUES (#{userId},#{account},#{password},#{balance},#{role},#{userPhoneNum})
    </insert>
    <update id="updateUser">
        UPDATE user
        SET
            <if test="password != null and ppassword !=''">
                password = #{password},
            </if>
            <if test="balance != null">
                balance = #{balance}
            </if>
        <if test="role != null">

        </if>
    </update>

    <select id="showAllUsers" resultType="cn.helloworld1999.bean.User">
        SELECT * FROM user
    </select>
    <select id="selectUserByAccount" resultType="cn.helloworld1999.bean.User">
        SELECT *
        FROM user
        WHERE account = #{account}
    </select>
</mapper>